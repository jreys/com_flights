<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field 
            name="id"
            type="text"
            label="COM_FLIGHTS_FLIGHTS_FIELD_ID_LABEL"
            description="COM_FLIGHTS_FLIGHTS_FIELD_ID_DESC"
            maxlength="10"
            filter="INTEGER"
            class="readonly"
            readonly="true"
        />
        <field name="origin" label="COM_FLIGHTS_FIELD_ORIGIN_LABEL" description="COM_FLIGHTS_FIELD_TITLE_DESC"
            type="airport"
            class="inputbox"
        />
        <field name="destination" label="COM_FLIGHTS_FIELD_DESTINATION_LABEL" description="COM_FLIGHTS_FIELD_TITLE_DESC"
            type="airport"
            class="inputbox"
        />
        <field name="seats" label="COM_FLIGHTS_FIELD_SEATS_LABEL" description="COM_FLIGHTS_FIELD_TITLE_DESC"
            type="text"
            maxlength="10"
            filter="INTEGER"
            class="input-xxlarge input-large-text"
        />

        <field
            name="departure"
            type="calendar"
            label="COM_FLIGHTS_FIELD_DEPARTURE_LABEL"
            description="JGLOBAL_FIELD_CREATED_DESC"
        />
        
        <field
            name="published"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="chzn-color-state"
            size="1"
            default="1"
            filter="interval"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="JGLOBAL_FIELD_CREATED_DESC"
            class="readonly"
        />
    </fieldset>
    <fields name="params">
        <fieldset name="params">
        </fieldset>
    </fields>
    <fields name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
        <fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
        </fieldset>
    </fields>
</form>